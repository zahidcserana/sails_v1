<div id="customer-create" v-cloak>
    <div class="container-fluid pt-5 pb-5" v-if="!cloudSuccess">
        <h1 class="text-center">Create an account</h1>
        <div style="max-width: 450px;" class="mx-auto">email
            <p class="text-center">Let's get started! Becoming a member is free and only takes a few minutes.</p>
            <hr/>
            <ajax-form action="customer"
                       :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-errors.sync="formErrors"
                       :form-data="formData" :form-rules="formRules" @submitted="submittedForm()">
                <div class="form-group">
                    <label for="full-name">Full name</label>
                    <input class="form-control" id="full-name" type="text"
                           :class="[formErrors.fullName ? 'is-invalid' : '']" v-model.trim="formData.fullName"
                           placeholder="Sturgis P. Sturgeon" autocomplete="name" focus-first>
                    <div class="invalid-feedback" v-if="formErrors.fullName">Please enter your full name.</div>
                </div>
                <div class="form-group">
                    <label for="email-address">Email address</label>
                    <input class="form-control" id="email-address" type="email"
                           :class="[formErrors.email ? 'is-invalid' : '']" v-model.trim="formData."
                           placeholder="sturgeon@example.com" autocomplete="email">
                    <div class="invalid-feedback" v-if="formErrors.email">Please enter a valid email address.
                    </div>
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile</label>
                    <input class="form-control" id="mobile" type="text"
                           :class="[formErrors.mobile ? 'is-invalid' : '']" v-model.trim="formData.mobile"
                           placeholder="Mobile"
                           autocomplete="mobile">
                    <div class="invalid-feedback" v-if="formErrors.mobile">Please enter mobile.</div>
                </div>
                <cloud-error v-if="cloudError==='emailAlreadyInUse'">It looks like there's already an account with your
                    email
                    address.</a>.
                </cloud-error>
                <cloud-error v-else-if="cloudError"></cloud-error>
                <div class="form-group">
                    <ajax-button type="submit"
                                 :syncing="syncing" class="btn-dark btn-lg btn-block">Create account
                    </ajax-button>
                </div>
            </ajax-form>
            <p class="text-center">
                <a href="/">Back</a>
            </p>
        </div>

    </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */
exposeLocalsToBrowser(); %>
